extends base

block content
  .container
    div
      ol.breadcrumb.bg-transparent.mt-5
        li.breadcrumb-item
          a(href="#")
            | Ana Sayfa
        li.breadcrumb-item
          a(href="#")
            | ÜRÜNLER
        li.breadcrumb-item
          a(href="#", style="color:#222222; text-transform: uppercase;")=product.category
        li.breadcrumb-item.active(style="color:#222222; text-transform: uppercase;")=product.name
    .product-detail-wrapper
      .product-info
        .row
          .col-sm-7.mb-5
            .detail-image-wrapper.mb-5
              #detail-image.detail-image

          .offset-md-1.col-sm-4
            .product-info-holder
              div
                // // GO TO SCRIPTS
                .product-name
                  h2#pname.m-0=product.name
                  p.mt-0.mb-4
                    span=product.color
                  p.mt-0.mb-4
                    span#size
                  .d-flex
                    h5(style="font-weight: normal;")
                      span.modal-price=`${product.price} ₺`
                  p(style="font-size: 0.8rem;")
                .product-attributes
                  .row
                    .col-12
                      .row.my-5.justify-content-between.align-items-center 
                        .col-3
                          label.m-0(for="quantity", style="line-height:3rem;") ADET 
                        .col-9
                          .row.justify-content-end.align-items-center
                            .col-2
                              button.button-minus(style="width:3rem;height:3rem") - 
                            .col-2.align-self-center
                              p.text-center.modal-qty(style="width:3rem;height:3rem;line-height:4rem") 1
                            .col-2
                              button.button-plus(style="width:3rem;height:3rem") +
                    .col-12
                      .row.align-items-center.my-5.border-top.border-dark
                        .col-3.pt-5
                          label.m-0 FİYAT
                        .col-9.text-end.pt-5
                          h2.m-0
                            span.modal-total=`${product.price} ₺`
                    button.btn-primary.btn.mx-auto(type="submit", style="max-width: 95%;", onclick="addToCart()") SEPETE EKLE
              p.py-5(style="color: #E97E39;text-align: center;font-weight: bold;") Kargo tarihi siparişten sonra en geç 1 hafta.
    .row
      .col-sm-12
        .product-description.mb-5
          .product-description-header
            h3 ÜRÜN AÇIKLAMASI
            hr
          .product-description-text(style="color:#666666")
            p(style="text-align:justify")
              span(style="font-size:18px")
                span(style="color:#666666")=product.summary

